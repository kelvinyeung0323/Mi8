<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mi8BlueWeight"
    android:orientation="vertical">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginTop="40dp"
       android:background="@color/mi8BlueLight"
       android:gravity="center_horizontal"
      >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal">
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_login"
               android:background="@color/mi8YellowLight"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_register"
               android:background="@android:color/white"/>
       </LinearLayout>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginBottom="20dp"
           android:layout_marginTop="20dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="30dp"
               android:paddingRight="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/txt_member_name"
                   android:textColor="@android:color/white"/>
               <EditText
                   android:id="@+id/lg_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:inputType="textPersonName"
                   android:text="13560248725"
                   android:textColor="@color/mi8White"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="30dp"
               android:paddingRight="30dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/txt_padssword"
                   android:textColor="@android:color/white"/>
               <EditText
                   android:id="@+id/lg_password"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:inputType="textPersonName"
                   android:text="123456"
                   android:textColor="@color/mi8White"/>
           </LinearLayout>
           <Button
               android:id="@+id/lg_submit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/btn_green_small"
               android:text="登录"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"/>

       </LinearLayout>

   </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            />
    </RelativeLayout>


</RelativeLayout>