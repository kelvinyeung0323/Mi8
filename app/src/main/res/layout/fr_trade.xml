<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mi8BlueLight"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/tradeTabBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/mi8YellowLight">
            <TextView
                android:id="@+id/tradeTabBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tradeHistTabBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tradeHistTabBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成订单"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/tradeContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>