<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="113dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="2"
        android:background="@drawable/shape_corner_box_small"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/orderTypeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沪市指数"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/exDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0930-0935"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S0123232"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方向："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看涨"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杠杆："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/startIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3232.99"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/curIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3232.99"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浮点："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/differ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.99"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盈亏："
                android:textColor="@color/mi8White"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34.99"
                android:textColor="@color/mi8White"
                android:textSize="9dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/btn_pink_small">
    </LinearLayout>

</LinearLayout>